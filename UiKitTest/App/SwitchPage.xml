<Page
    width="100%"
    height="100%"
    padding="60dp"
    orientation="Vertical"
    alignItemsVer="Start"
    alignItemsHor="Start">

    <Element
        width="100%"
        alignItemsHor="Start"
        orientation="Vertical">
        <UiText
            text="Switch"
            fontSize="24dp"
            fontStyle="SemiBold">
        </UiText>
        <UiText
            marginTop="20dp"
            width="100%"
            textAlignHor="Start"
            maxNumLines="5"
            text="Use Switch controls to present users with exactly two mutually exclusive options (like on/off), where choosing an option results in an immediate commit. A switch should have a single label."
            fontSize="14dp">
        </UiText>

        <UiText
            marginTop="24dp"
            text="A simple Switch"
            fontSize="18dp"
            fontStyle="SemiBold">
        </UiText>
        <Element
            width="100%"
            height="100dp"
            marginTop="20dp"
            borderSize="1dp"
            backgroundColor="glm::vec4(240, 240, 240, 255)"
            borderColor="glm::vec4(220, 220, 220, 255)"
            borderRadius="10"
            padding="20dp"
            alignItemsHor="Start"
            orientation="Vertical">

            <UiSwitch>
            </UiSwitch>

        </Element>

      

    </Element>

</Page>