<Element
    width="100%"
    height="100%"
    padding="60dp"
    orientation="Vertical"
    alignItemsVer="Start"
    alignItemsHor="Start">

    <Element
        width="70%"
        alignItemsHor="Start"
        orientation="Vertical">
        <UiText
            text="Expander"
            fontSize="30dp">
        </UiText>
        <UiText
            marginTop="20dp"
            text="The Expander has a header and can expand to show a body with more content."
            fontSize="16dp">
        </UiText>

        <UiText
            marginTop="24dp"
            text="A ComboBox with items defined inline and its width set."
            fontSize="24dp">
        </UiText>
        <Element
            width="100%"
            minHeight="100dp"
            marginTop="20dp"
            borderSize="1dp"
            backgroundColor="glm::vec4(240, 240, 240, 255)"
            borderColor="glm::vec4(220, 220, 220, 255)"
            borderRadius="10"
            padding="20dp"
            alignItemsVer="Start"
            alignItemsHor="Start">

            <UiExpander>
                <UiExpanderHeaderDefault
                    title="_s(This is header text)">
                </UiExpanderHeaderDefault>
                <UiExpanderBody
                    width="100%"
                    height="100dp"
                    borderSize="1dp"
                    borderColor="glm::vec4(220, 220, 220, 255)">
                    <UiText
                        text="This is in the content">
                    </UiText>
                </UiExpanderBody>

            </UiExpander>

        </Element>

      

    </Element>

</Element>