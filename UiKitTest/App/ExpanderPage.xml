<Page
    width="100%"
    height="100%"
    padding="60dp"
    orientation="Vertical"
    alignItemsVer="Start"
    alignItemsHor="Start">

    <Element
        width="100%"
        alignItemsHor="Start"
        orientation="Vertical">
        <UiText
            text="Expander"
            fontStyle="SemiBold"
            fontSize="24dp">
        </UiText>
        <UiText
            marginTop="20dp"
            width="100%"
            maxNumLines="5"
            textAlignHor="Start"
            text="The Expander has a header and can expand to show a body with more content. Use an Expander when some content is only relevant some of the time (for example to read more information or access additional options for an item)."
            fontSize="14dp">
        </UiText>

        <UiText
            marginTop="24dp"
            text="A ComboBox with items defined inline and its width set."
            fontStyle="SemiBold"
            fontSize="18dp">
        </UiText>
        <WidgetSection>

            <UiExpander>
                <UiExpanderHeaderDefault
                    title="_s(This is header text)">
                </UiExpanderHeaderDefault>
                <UiExpanderBody
                    width="100%"
                    height="100dp"
                    borderSize="1dp"
                    borderColor="glm::vec4(220, 220, 220, 255)">
                    <UiText
                        text="This is in the content">
                    </UiText>
                </UiExpanderBody>

            </UiExpander>

        </WidgetSection>

      

    </Element>

</Page>