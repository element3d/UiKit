<Page
    width="100%"
    height="100%"
    padding="60dp"
    orientation="Vertical"
    alignItemsVer="Start"
    alignItemsHor="Start">

    <Element
        width="100%"
        alignItemsHor="Start"
        orientation="Vertical">
        <UiText
            text="ComboBox"
            fontStyle="SemiBold"
            fontSize="24dp">
        </UiText>
        <UiText
            marginTop="20dp"
            width="100%"
            maxNumLines="5"
            textAlignHor="Start"
            text="Use a ComboBox when you need to conserve on-screen space and when users select only option at time. A ComboBox shows only the currently selected item."
            fontSize="14dp">
        </UiText>

        <UiText
            marginTop="24dp"
            text="A ComboBox with items defined inline and its width set."
            fontStyle="SemiBold"
            fontSize="18dp">
        </UiText>
        <WidgetSection>

            <UiComboBox>
                <UiComboBoxHeaderDefault>
                </UiComboBoxHeaderDefault>
                <UiComboBoxBody>
                    <UiComboBoxItem
                        title="_s(Arial)">
                    </UiComboBoxItem>
                    <UiComboBoxItem
                        title="_s(Comic Sans MS)">
                    </UiComboBoxItem>
                    <UiComboBoxItem
                        title="_s(Courier New)">
                    </UiComboBoxItem>
                    <UiComboBoxItem
                        title="_s(Segoe UI)">
                    </UiComboBoxItem>
                    <UiComboBoxItem
                        title="_s(Times New Roman)">
                    </UiComboBoxItem>
                </UiComboBoxBody>
            </UiComboBox>

            <!-- <Element
                width="200"
                height="40"
                backgroundColor="glm::vec4(0, 255, 0, 255)"
                margin="30">
            </Element> -->

        </WidgetSection>

      

    </Element>

</Page>