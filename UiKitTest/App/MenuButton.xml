 <UiButton
    width="320dp"
    height="90dp"

    alignItemsHor="Start"
    padding="20dp"
    paddingRight="5"
    overflow="Hidden">

    <Element
        element="mImage"
        width="50dp"
        aspectRatio="1"
        backgroundImage="UiKitTest/Images/ControlImages/Button.png">
    </Element>
    <Element
        marginLeft="20dp"
        width="100%"
        scaling="Shrink"
        overflow="Hidden"
        orientation="Vertical"
        alignItemsHor="Start">
        <UiText
            element="mTitle"
            text="Button"
            fontStyle="SemiBold">
        </UiText>
        <UiText
            marginTop="4dp"
            width="100%"
            maxNumLines="10"
            element="mDesc"
            textAlignHor="Start"
            text="A control that responds a user input and raises a click event"
            fontSize="12dp"
            textColor="glm::vec4(100, 100, 100, 255)"
            maxNumLines="2">
        </UiText>
    </Element>

</UiButton>