<Page
    width="100%"
    height="100%"
    padding="60dp"
    orientation="Vertical"
    alignItemsVer="Start"
    alignItemsHor="Start">

    <Element
        width="100%"
        alignItemsHor="Start"
        orientation="Vertical">
        <UiText
            text="RadioButton"
            fontSize="24dp"
            fontStyle="SemiBold">
        </UiText>
        <UiText
            marginTop="20dp"
            width="100%"
            textAlignHor="Start"
            maxNumLines="5"
            text="Use RadioButton to let a user choose between exclusive, related options."
            fontSize="14dp">
        </UiText>

        <UiText
            marginTop="24dp"
            text="A ComboBox with items defined inline and its width set."
            fontSize="18dp"
            fontStyle="SemiBold">
        </UiText>
        <Element
            width="100%"
            height="100dp"
            marginTop="20dp"
            borderSize="1dp"
            backgroundColor="glm::vec4(240, 240, 240, 255)"
            borderColor="glm::vec4(220, 220, 220, 255)"
            borderRadius="10"
            padding="20dp"
            alignItemsHor="Start"
            orientation="Vertical">

            <Element>
                <UiRadioButton
                    group="_s(test)">
                </UiRadioButton>
                <UiText
                    marginLeft="10dp"
                    text="Option 1">
                </UiText>
            </Element>
            <Element>
                <UiRadioButton
                    marginTop="10dp"
                    group="_s(test)">
                </UiRadioButton>
                <UiText
                    marginLeft="10dp"
                    text="Option 2">
                </UiText>
            </Element>
            <Element>
                <UiRadioButton
                    marginTop="10dp"
                    group="_s(test)">
                </UiRadioButton>
                <UiText
                    marginLeft="10dp"
                    text="Option 3">
                </UiText>
            </Element>

        </Element>

      

    </Element>

</Page>