<Page
    width="100%"
    height="100%"
    padding="60dp"
    orientation="Vertical"
    alignItemsVer="Start"
    alignItemsHor="Start">

    <Element
        width="100%"
        alignItemsHor="Start"
        orientation="Vertical">
        <UiText
            text="CheckBox"
            fontSize="30dp">
        </UiText>
        <UiText
            marginTop="20dp"
            width="100%"
            maxNumLines="5"
            textAlignHor="Start"
            text="CheckBox control let the user select a combination of binary options. In contrast, RadioButton control allow the user to select from mutually exclusive options. The indeterminate state is used to indicate that an option is set for some, but not all, child oprions. Don't allow user to set indeterminate state directly to indicate a third option."
            fontSize="16dp">
        </UiText>

        <UiText
            marginTop="24dp"
            text="A 2-state CheckBox."
            fontSize="24dp">
        </UiText>
        <Element
            width="100%"
            height="100dp"
            marginTop="20dp"
            borderSize="1dp"
            backgroundColor="glm::vec4(240, 240, 240, 255)"
            borderColor="glm::vec4(220, 220, 220, 255)"
            borderRadius="10"
            padding="20dp"
            alignItemsHor="Start">

            <UiCheckBox>
               
            </UiCheckBox>

        </Element>

        <UiText
            marginTop="30dp"
            text="A 3-state CheckBox."
            fontSize="24dp">
        </UiText>
        <Element
            width="100%"
            marginTop="20dp"
            borderSize="1dp"
            backgroundColor="glm::vec4(240, 240, 240, 255)"
            borderColor="glm::vec4(220, 220, 220, 255)"
            borderRadius="10"
            padding="20dp"
            alignItemsHor="Start">

            <Element
                orientation="Vertical"
                alignItemsHor="Start">
                <Element>
                    <UiCheckBox
                        isThreeState="true"
                        group="_s(Group1)"> 
                    </UiCheckBox>
                    <UiText
                        text="Select All"
                        marginLeft="10dp">
                    </UiText>
                </Element>
                <Element
                    marginTop="10dp"
                    marginLeft="10dp">
                    <UiCheckBox
                        group="_s(Group1)"> 
                    </UiCheckBox>
                    <UiText
                        text="Option 1"
                        marginLeft="10dp">
                    </UiText>
                </Element>
                <Element
                    marginTop="10dp"
                    marginLeft="10dp">
                    <UiCheckBox
                        group="_s(Group1)"> 
                    </UiCheckBox>
                    <UiText
                        text="Option 2"
                        marginLeft="10dp">
                    </UiText>
                </Element>
                <Element
                    marginTop="10dp"
                    marginLeft="10dp">
                    <UiCheckBox
                        group="_s(Group1)"> 
                    </UiCheckBox>
                    <UiText
                        text="Option 3"
                        marginLeft="10dp">
                    </UiText>
                </Element>
            </Element>

        </Element>

    </Element>

</Page>