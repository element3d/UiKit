<Page
    width="100%"
    height="100%"
    padding="60dp"
    orientation="Vertical"
    alignItemsVer="Start"
    alignItemsHor="Start">

    <Element
        width="70%"
        alignItemsHor="Start"
        orientation="Vertical">
        <UiText
            text="ListView"
            fontSize="24dp"
            fontStyle="SemiBold">
        </UiText>
        <UiText
            marginTop="20dp"
            text="The ListView lets you show a collection of items in a list that scrolls vertically."
            fontSize="14dp">
        </UiText>

        <UiText
            marginTop="24dp"
            text="Basic ListView with simple data."
            fontStyle="SemiBold"
            fontSize="18dp">
        </UiText>
        <Element
            width="100%"
            minHeight="100dp"
            marginTop="20dp"
            borderSize="1dp"
            backgroundColor="glm::vec4(240, 240, 240, 255)"
            borderColor="glm::vec4(220, 220, 220, 255)"
            borderRadius="10"
            padding="20dp"
            alignItemsVer="Start"
            alignItemsHor="Start">

            <UiListView
                element="mListView"
                width="300dp"
                height="300dp"
                borderColor="glm::vec4(0, 0, 0, 255)"
                borderSize="1">
            
            </UiListView>

        </Element>

      

    </Element>

</Page>

