<Page
    width="100%"
    height="100%"
    padding="60dp"
    orientation="Vertical"
    alignItemsVer="Start"
    alignItemsHor="Start">

    <Element
        width="70%"
        alignItemsHor="Start"
        orientation="Vertical">
        <UiText
            text="DropDown"
            fontStyle="Bold"
            fontSize="24dp">
        </UiText>
        <UiText
            marginTop="20dp"
            text="A control that drops down a flyout of choices from which one can be chosen."
            fontSize="16dp">
        </UiText>

        <UiText
            marginTop="24dp"
            text="Simple DropDownButton"
            fontStyle="Bold"
            fontSize="20dp">
        </UiText>
        <Element
            width="100%"
            height="100dp"
            marginTop="20dp"
            borderSize="1dp"
            backgroundColor="glm::vec4(240, 240, 240, 255)"
            borderColor="glm::vec4(220, 220, 220, 255)"
            borderRadius="10"
            padding="20dp"
            alignItemsHor="Start">

            <UiDropDownButton>
                <UiText
                    text="Email">
                </UiText> 
                <UiDropDownBody>
                    <UiDropDownItem
                        text="Send">
                    </UiDropDownItem>
                    <UiDropDownItem
                        text="Reply">
                    </UiDropDownItem>
                    <UiDropDownItem
                        text="Reply All">
                    </UiDropDownItem>
                </UiDropDownBody>
            </UiDropDownButton>

        </Element>

        <UiText
            marginTop="24dp"
            text="DropDownButton with icons"
            fontStyle="Bold"
            fontSize="20dp">
        </UiText>
        <Element
            width="100%"
            height="100dp"
            marginTop="20dp"
            borderSize="1dp"
            backgroundColor="glm::vec4(240, 240, 240, 255)"
            borderColor="glm::vec4(220, 220, 220, 255)"
            borderRadius="10"
            padding="20dp"
            alignItemsHor="Start">

            <UiDropDownButton>
                <UiIcon
                    charcode="e715"
                    width="18dp"
                    height="18dp">
                </UiIcon> 
                <UiDropDownBody>
                    <UiDropDownIconItem
                        text="Send">
                    </UiDropDownIconItem>
                    <UiDropDownIconItem
                        text="Reply">
                    </UiDropDownIconItem>
                    <UiDropDownIconItem
                        text="Reply All">
                    </UiDropDownIconItem>
                </UiDropDownBody>
            </UiDropDownButton>

        </Element>
    </Element>

</Page>