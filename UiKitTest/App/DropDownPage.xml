<Page
    width="100%"
    height="100%"
    padding="60dp"
    orientation="Vertical"
    alignItemsVer="Start"
    alignItemsHor="Start">

    <Element
        width="70%"
        alignItemsHor="Start"
        orientation="Vertical">
        <UiText
            text="DropDown"
            fontStyle="Bold"
            fontSize="24dp">
        </UiText>
        <UiText
            marginTop="20dp"
            text="The Button control provides a Click event to respond to user input from a touch, mouse, keyboard or other input device."
            fontSize="16dp">
        </UiText>

        <UiText
            marginTop="24dp"
            text="A simple Button with text content."
            fontStyle="Bold"
            fontSize="20dp">
        </UiText>
        <Element
            width="100%"
            height="100dp"
            marginTop="20dp"
            borderSize="1dp"
            backgroundColor="glm::vec4(240, 240, 240, 255)"
            borderColor="glm::vec4(220, 220, 220, 255)"
            borderRadius="10"
            padding="20dp"
            alignItemsHor="Start">

            <UiDropDownButton>
                <!-- <UiText
                    text="Email">
                </UiText> -->
                <UiDropDownBody>
                    <UiDropDownItem
                        text="Send">
                    </UiDropDownItem>
                    <UiDropDownItem
                        text="Reply">
                    </UiDropDownItem>
                    <UiDropDownItem
                        text="Reply All">
                    </UiDropDownItem>
                </UiDropDownBody>
            </UiDropDownButton>

        </Element>

        <UiText
            marginTop="30dp"
            fontStyle="Bold"
            text="A Button with graphical content."
            fontSize="20dp">
        </UiText>
        <Element
            width="100%"
            height="100dp"
            marginTop="20dp"
            borderSize="1dp"
            backgroundColor="glm::vec4(240, 240, 240, 255)"
            borderColor="glm::vec4(220, 220, 220, 255)"
            borderRadius="10"
            padding="20dp"
            alignItemsHor="Start">

            <UiButton
                width="50dp"
                height="50dp">
               <Element
                width="26dp"
                height="26dp"
                backgroundImage="UiKitTest/Images/Slices.png">
               </Element>
            </UiButton>
        </Element>

        <UiText
            marginTop="30dp"
            fontStyle="Bold"
            text="Accent style applied to Button."
            fontSize="20dp">
        </UiText>
        <Element
            width="100%"
            height="100dp"
            marginTop="20dp"
            borderSize="1dp"
            backgroundColor="glm::vec4(240, 240, 240, 255)"
            borderColor="glm::vec4(220, 220, 220, 255)"
            borderRadius="10"
            padding="20dp"
            alignItemsHor="Start">

            <UiButtonDefault
                style="UiAccent"
                text="Standart Ui Button">
               
            </UiButtonDefault>

        </Element>

    </Element>

</Page>