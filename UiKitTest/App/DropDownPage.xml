<Page
    width="100%"
    height="100%"
    padding="60dp"
    orientation="Vertical"
    alignItemsVer="Start"
    alignItemsHor="Start">

    <Element
        width="100%"
        alignItemsHor="Start"
        orientation="Vertical">
        <UiText
            text="DropDown"
            fontStyle="SemiBold"
            fontSize="24dp">
        </UiText>
        <UiText
            marginTop="20dp"
            text="A control that drops down a flyout of choices from which one can be chosen."
            fontSize="14dp">
        </UiText>

        <UiText
            marginTop="24dp"
            text="Simple DropDownButton"
            fontStyle="SemiBold"
            fontSize="18dp">
        </UiText>
        <WidgetSection>

            <UiDropDownButton>
                <UiText
                    text="Email">
                </UiText> 
                <UiDropDownBody>
                    <UiDropDownItem
                        text="Send">
                    </UiDropDownItem>
                    <UiDropDownItem
                        text="Reply">
                    </UiDropDownItem>
                    <UiDropDownItem
                        text="Reply All">
                    </UiDropDownItem>
                </UiDropDownBody>
            </UiDropDownButton>

        </WidgetSection>

        <UiText
            marginTop="24dp"
            text="DropDownButton with icons"
            fontStyle="SemiBold"
            fontSize="18dp">
        </UiText>
        <WidgetSection>

            <UiDropDownButton>
                <UiIcon
                    charcode="e715"
                    width="18dp"
                    height="18dp">
                </UiIcon> 
                <UiDropDownBody>
                    <UiDropDownIconItem
                        icon="_s(E725)"
                        text="Send">
                    </UiDropDownIconItem>
                    <UiDropDownIconItem
                        icon="_s(E8CA)"
                        text="Reply">
                    </UiDropDownIconItem>
                    <UiDropDownIconItem
                        icon="_s(E8C2)"
                        text="Reply All">
                    </UiDropDownIconItem>
                </UiDropDownBody>
            </UiDropDownButton>

        </WidgetSection>
    </Element>

</Page>