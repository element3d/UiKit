<Page
    width="100%"
    height="100%"
    padding="60dp"
    orientation="Vertical"
    alignItemsVer="Start"
    alignItemsHor="Start">

    <Element
        width="100%"
        alignItemsHor="Start"
        orientation="Vertical">
        <UiText
            text="Slider"
            fontSize="30dp">
        </UiText>
        <UiText
            marginTop="20dp"
            width="100%"
            textAlignHor="Start"
            maxNumLines="5"
            text="Use a Slider when you want your users to be able to set defined, contiguous value (such as volume or brightness) or a range of discrete values (such as screen resolution settings)."
            fontSize="16dp">
        </UiText>

        <UiText
            marginTop="24dp"
            text="A simple Slider."
            fontSize="24dp">
        </UiText>
        <Element
            width="100%"
            height="100dp"
            marginTop="20dp"
            borderSize="1dp"
            backgroundColor="glm::vec4(240, 240, 240, 255)"
            borderColor="glm::vec4(220, 220, 220, 255)"
            borderRadius="10"
            padding="20dp"
            alignItemsHor="Start"
            orientation="Vertical">

            <UiSlider>
            </UiSlider>

        </Element>

      

    </Element>

</Page>