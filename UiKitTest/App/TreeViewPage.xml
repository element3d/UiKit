<Page
    width="100%"
    height="100%"
    padding="60dp"
    orientation="Vertical"
    alignItemsVer="Start"
    alignItemsHor="Start">

    <Element
        width="70%"
        alignItemsHor="Start"
        orientation="Vertical">
        <UiText
            text="TreeView"
            fontSize="30dp">
        </UiText>
        <UiText
            marginTop="20dp"
            text="Use a ComboBox when you need to conserve on-screen space and when users select only option at time."
