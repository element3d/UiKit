        </UiText>

        <UiText
            marginTop="24dp"
            text="A ComboBox with items defined inline and its width set."
            fontSize="24dp">
        </UiText>
        <Element
            width="100%"
            marginTop="20dp"
            borderSize="1dp"
            backgroundColor="glm::vec4(240, 240, 240, 255)"
            borderColor="glm::vec4(220, 220, 220, 255)"
            borderRadius="10"
            padding="20dp"
            alignItemsHor="Start"
            orientation="Vertical">

            <UiTreeView
                element="mTreeView">
                <UiTreeViewItem>
                    <UiTreeViewItemHeaderDefault
                        title="_s(Work Documents)">
                    </UiTreeViewItemHeaderDefault>

                    <UiTreeViewItem>
                        <UiTreeViewItemHeaderDefault
