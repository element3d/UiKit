<Dropdown 
    borderSize="1dp"
    borderColor="glm::vec4(220, 220, 220, 255)"
    borderRadius="4"
    height="30dp"
    padding="11dp"
    paddingRight="7dp"
    paddingTop="7dp"
    paddingBottom="7dp"
    backgroundColor="glm::vec4(250, 250, 250, 255)">
    <include path="UiColor.h" />

    <Element
        element="mUnderline"
        left="0"
        right="0"
        bottom="0"
        positionType="Absolute"
        backgroundColor="UiColor::Primary"
        height="2dp">
    </Element>

    <Element
      element="mHover"
      positionType="Absolute"
      top="0"
      left="0"
      bottom="0"
      right="0">
    </Element>

    <Shadow
        blurSize="1"
        offset="x: 0, y: 1"
        color="glm::vec4(0, 0, 0, 255)">
    </Shadow>

    <Element
        element="mContent">
    </Element>

    <Element
        element="mIconCont"
        marginLeft="14dp"
        scaling="Shrink"
        padding="4dp"
        aspectRatio="1"
        borderRadius="4"
        backgroundColor="UiColor::Primary">

        <UiIcon
            element="mIcon"
        
            width="10dp"
            height="10dp"
            color="glm::vec4(50, 50, 50, 255)"
            charcode="E70D">
        </UiIcon>
    </Element>

</Dropdown>