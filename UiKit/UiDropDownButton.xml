<Dropdown 
    borderSize="1dp"
    borderColor="glm::vec4(220, 220, 220, 255)"
    borderRadius="4"

    padding="14dp"
    paddingTop="7dp"
    paddingBottom="7dp"
    backgroundColor="glm::vec4(250, 250, 250, 255)">

    <Element
      element="mHover"
      positionType="Absolute"
      top="0"
      left="0"
      bottom="0"
      right="0">
    </Element>

    <Shadow
        blurSize="1"
        offset="x: 0, y: 1"
        color="glm::vec4(0, 0, 0, 255)">
    </Shadow>

    <Element
        element="mContent">
    </Element>
    <!-- <UiText
        fontSize="14dp">
    </UiText> -->

     <UiIcon
        element="mIcon"
        marginLeft="14dp"
        width="8dp"
        height="8dp"
        color="glm::vec4(50, 50, 50, 255)"
        charcode="E70D">
    </UiIcon>

</Dropdown>