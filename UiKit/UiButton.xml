<Element
    borderRadius="4"
    borderSize="1dp"
    backgroundColor="glm::vec4(250, 250, 250, 255)"
    borderColor="glm::vec4(220, 220, 220, 255)"
    padding="14dp"
    overflow="Hidden"
    paddingTop="7dp"
    paddingBottom="7dp"
    >

    <Element
        element="mHover"
        top="0"
        left="0"
        bottom="0"
        right="0"
        positionType="Absolute">
    </Element>

    <Shadow
        blurSize="1"
        offset="x: 0, y: 1"
        color="glm::vec4(0, 0, 0, 255)">
    </Shadow>

</Element>