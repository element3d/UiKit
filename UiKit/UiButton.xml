<Element
    borderRadius="4"
    borderSize="1dp"
    backgroundColor="glm::vec4(250, 250, 250, 255)"
    borderColor="glm::vec4(220, 220, 220, 255)"
    padding="14dp"
    height="32dp"
    overflow="Hidden"
    paddingTop="7dp"
    paddingBottom="7dp"
    >

    <Element
        element="mHover"
        top="0"
        left="0"
        bottom="0"
        right="0"
        positionType="Absolute">
    </Element>

    <Element
        element="mRipple"
       width="150%"
       aspectRatio="1"
        positionType="Absolute"
        opacity="0"
        borderRadius="0.5"
        backgroundColor="glm::vec4(255, 255, 255, 0.36 * 255)">
    </Element>

    <Shadow
        blurSize="1"
        offset="x: 0, y: 1"
        color="glm::vec4(0, 0, 0, 255)">
    </Shadow>

</Element>